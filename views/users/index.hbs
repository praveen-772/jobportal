<section>
    <div class="container mt-5 ml-5">
        <div class="row">
            {{#each Jobs}}
            <div class="col-md-3">
                <div class="card" style="width: 20rem; height: 35rem">
                    <img class="card-img-top"  src="../views/employers/employerLogos/{{this._id}}.jpg" alt="Emp image">
                    <div class="card-body">
                        <p class="card-title">Job Title: {{this.jobTitle}}</p>
                        <p class="card-text">Company Name: {{this.compName}}</p>
                        <p class="card-text">Schedule: {{this.timeSchedule}}</p>
                        <p class="card-text">Posted on: {{this.date}}</p>
                        <p class="card-text">Location: {{this.compLocation}}</p>
                        <p class="card-text">Skills: {{this.skills}}</p>
                        <p class="card-text">Experience: {{this.exp}}</p>
                        <p class="card-text">Qualification: {{this.qualification}}</p>
                        <p class="card-text">Description: {{this.desc}}</p><br>
                        <button onclick="" class="btn btn-primary">Apply for this Job</button>
                    </div>
                </div>
            </div>
            
            {{/each}}
        </div>
    </div>
</section>