<div class="content">
    <section>
        <div class="container p-3">
          <h3>Employers Management</h3>
            <table class="table" id="jobtable">
                <thead>
                    <tr>
                        <th scope="col">Employer ID</th>
                        <th scope="col">Employer Name</th>
                        <th scope="col">Employer Email ID</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each employers}}
                    <tr>
                        <th scope="row">{{this._id}}</th>
                        <td>{{this.empname}}</td>
                        <td>{{this.empemail}}</td>
                        <td>
                            <a href="blockEmployer/{{this.empname}}"class="btn btn-danger"
                            onclick="return confirm('Are you sure to Block this Employer : {{this.empname}}')">Block</a>
                            <a href="deleteEmployer/{{this.empname}}"class="btn btn-danger"
                            onclick="return confirm('Are you sure to Delete this Employer : {{this.empname}} ')">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>
        </div>
    </section>
</div>